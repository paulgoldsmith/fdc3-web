{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "clean": {},
        "build": {
            "dependsOn": [
                "^build"
            ],
            "cache": true
        },
        "test": {
            "cache": true
        },
        "lint": {
            "cache": true
        },
        "generate-docs": {
            "dependsOn": [
                "^generate-docs"
            ]
        },
        "typecheck-specs": {
            "executor": "@nx/js:tsc",
            "dependsOn": [
                "^build"
            ],
            "options": {
                "rootDir": "{projectRoot}/src",
                "main": "index.ts",
                "tsConfig": "{projectRoot}/tsconfig.spec.json"
            }
        },
        "@nx/js:tsc": {
            "dependsOn": [
                "^build"
            ],
            "options": {
                "outputPath": "{workspaceRoot}/dist/{projectName}",
                "rootDir": "{projectRoot}/src",
                "main": "index.ts",
                "tsConfig": "{projectRoot}/tsconfig.lib.json",
                "assets": [
                    {
                        "input": "{workspaceRoot}",
                        "glob": ".npmignore",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "package.json",
                        "output": "./"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "README.md",
                        "output": "./"
                    }
                ]
            }
        },
        "@nx/esbuild:esbuild": {
            "cache": true,
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "default",
                "^default"
            ]
        }
    },
    "defaultBase": "main",
    "release": {
        "version": {
            "currentVersionResolver": "git-tag",
            "preserveLocalDependencyProtocols": false,
            "manifestRootsToUpdate": [
                "projects/{projectName}/"
            ]
        }
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/vite/plugin",
            "options": {
                "buildTargetName": "build",
                "serveTargetName": "serve",
                "previewTargetName": "preview",
                "testTargetName": "test"
            }
        },
        {
            "plugin": "@nx/vite/plugin",
            "options": {
                "buildTargetName": "build",
                "previewTargetName": "preview",
                "testTargetName": "test"
            }
        }
    ],
    "generators": {
        "@nx/web:application": {
            "style": "css",
            "linter": "eslint",
            "unitTestRunner": "none",
            "e2eTestRunner": "none"
        }
    }
}